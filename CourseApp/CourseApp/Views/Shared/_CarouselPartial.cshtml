@{
    <style>

        .carousel .carousel-item {
            height: 450px;
        }

        /* Make the image fully responsive */
        .carousel-inner {
            width: 100%;
        }

        .carousel-item img {
            margin: auto;
            width: 100%;
            display: block;
        }
    </style>
    
    <div class="container mt-3 m-lg-3">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="@Url.Content("~/content/images/stock/pexels-north-1407322.jpg")" alt="Learn the guitar">
                    <div class="carousel-caption">
                        <h5>Learn the guitar</h5>
                    </div>
                </div>

                <div class="carousel"> </div>
                <div class="carousel-item">
                    <img src="@Url.Content("~/content/images/stock/pexels-pixabay-163427.jpg")" alt="Learn to play Chess">
                    <div class="carousel-caption">
                        <h5>Learn to play Chess</h5>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="@Url.Content("~/content/images/stock/pexels-pixabay-270632.jpg")" alt="Learn Web-Design">
                    <div class="carousel-caption">
                        <h5>Learn Responsive Web-Design</h5>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>












}
