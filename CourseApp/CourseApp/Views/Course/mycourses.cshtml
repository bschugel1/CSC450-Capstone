@model ICollection<CourseVM>

<h1>My Courses</h1>

@if (Model.Count < 1)
{
    <div>
        <h3>You have not yet registered for any courses</h3>
        <div>
            <h3>  <a class="btn btn-primary" asp-action="Index" asp-controller="Course">View Courses</a> </h3>
        </div>
    </div>
}

<div>
    <div class="md-form my-0 container p-2 m-2">
        <input id="searchField" onkeyup="searchList()" type="text" placeholder="Search" aria-label="Search">
    </div>
</div>
<ul class="list-unstyled" id="list">
    @foreach (var course in Model)
    {
        <li>
                <h3>  <a asp-action="Preview" asp-controller="Course" asp-route-id="@course.Id"> @course.Name </a> </h3>
        </li>
    }
</ul>

<script src="~/js/search-list.js"></script>