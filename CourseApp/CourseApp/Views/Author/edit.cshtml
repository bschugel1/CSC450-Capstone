@model CourseEditVM
@using CourseApp.ViewComponents

@{
    var showAddForm = ViewData["ShowAddForm"] as bool?;
    var parentSectionId = ViewData["ParentSectionId"] as long?;
}

<a asp-action="Index" asp-controller="Author"><i class="fas fa-chevron-left"></i> Return to Courses</a>
<div class="container">
    <br />
    <h3>Course Properties</h3>
    <div class="container">
        <br />
    </div>
    <div asp-validation-summary="All"></div>
    <form asp-action="edit" name="edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group row">
            <div class="col-sm-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <label asp-for="CourseCode"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="CourseCode" class="form-control" />
                <span asp-validation-for="CourseCode"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <label asp-for="Subject"></label>
            </div>
            <div class="col-sm-9">
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <label asp-for="Description"></label>
            </div>
            <div class="col-sm-9">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="">
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>
@if (showAddForm == true)
{
    <vc:add-course-section-form course-id="@Model.Id" parent-id="@parentSectionId">

    </vc:add-course-section-form>

}

<vc:course-edit-content max-priority="3" is-done="false" course-id="@Model.Id">

</vc:course-edit-content>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/form-validation.js"></script>
    <script src="~/js/file-type-select.js"></script>
    <script src="~/js/course-content-collapsable.js"></script>
}

