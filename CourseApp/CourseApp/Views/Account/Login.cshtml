
@{
    ViewData["Title"] = "Login";
    ViewData["ReturnUrl"] = "~/Views/Home/Index.cshtml";
}

@model CourseApp.ViewModels.LoginVM
<h1>Login</h1>



<div class="containerLogin">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Login</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-controller="Account">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                        </div>
                        <input asp-for="Email" type="text" class="form-control" placeholder="username">

                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                        </div>
                        <input asp-for="Password" type="password" class="form-control" placeholder="password">
                    </div>
                    <div class="form-check">
                        <div class="row align-items-center remember checkbox-container">
                            <input asp-for="RememberMe" type="checkbox"> Remember Me
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary">

                    </div>

                    <div asp-validation-summary="All">

                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Don't have an account?<a asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a>
                </div>
                <div class="d-flex justify-content-center">
                    <a href="#">Forgot your password?</a>
                </div>
            </div>
        </div>
    </div>




</div>



