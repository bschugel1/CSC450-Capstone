@{
    ViewData["Title"] = "Register";
}
@model CourseApp.ViewModels.MessageVM
<h1>Messages</h1>
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">Messaging</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>

    </div>
</div>
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">Add to Group</div>
        <div class="col-4"><input type="text" id="groupInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="groupAddButton" value="Submit" />
        </div>

    </div>
</div>
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">Group Messaging</div>
    <div class="row">
        <div class="col-2">Group</div>
        <div class="col-4"><input type="text" id="groupMessageGroup" /></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="groupMessageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="groupSendButton" value="Send Group Message" />
        </div>

    </div>
</div>
<!-- Direct Messaging Not working at moment, need to explore ways to implement -->
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">Direct Messaging (Work in Progress)</div>
    <div class="row">
        <div class="col-2">Recipient</div>
        <div class="col-4"><input type="text" id="directMessageRecipient" /></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="directMessageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="directSendButton" value="Send Direct Message" />
        </div>

    </div>
</div>




<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
